{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["./src/components/*"],
      "@Utils/*": ["./src/utils/*"],
      "@Src/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    "**/**/**/*.ts",
    "**/**/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
